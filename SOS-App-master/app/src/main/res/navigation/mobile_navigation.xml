<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.sos_app_ui.ui.configuration.ConfigurationFragment"
        android:label="@string/title_configuration"
        tools:layout="@layout/fragment_configuration" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.sos_app_ui.ui.current_activity.CurrentActivityFragment"
        android:label="@string/title_currentActivity"
        tools:layout="@layout/fragment_current_activity" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.sos_app_ui.ui.contacts.ContactsFragment"
        android:label="@string/title_last_activity"
        tools:layout="@layout/fragment_last_activity" />
</navigation>